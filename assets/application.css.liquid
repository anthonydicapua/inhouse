/* http://meyerweb.com/eric/tools/css/reset/ 
   v2.0 | 20110126
   License: none (public domain)
*/
html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}

/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
  display: block;
}

body {
  line-height: 1;
}

ol, ul {
  list-style: none;
}

blockquote, q {
  quotes: none;
}

blockquote:before, blockquote:after,
q:before, q:after {
  content: "";
  content: none;
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}

* {
  font-family: "Courier New", Courier, monospace;
  box-sizing: border-box;
}

html,
body {
  width: 100%;
  margin: 0;
  padding: 0;
  color: #000000;
  line-height: 20px;
}

body {
  font-size: 13px;
  background-color: #ffffff;
  background-size: 100%;
  background-attachment: fixed;
  background-repeat: no-repeat;
  padding-top: 140px;
}

h1,
.h1,
h2,
.h2,
h3,
.h3 {
  font-family: "Georgia", "Times New Roman", Times, serif;
  font-weight: 700;
  color: #333333;
}

h1,
.h1 {
  font-size: 40px;
  line-height: 40px;
}

h2,
.h2 {
  font-size: 20px;
  line-height: 20px;
}

h3,
.h3 {
  font-size: 15px;
  line-height: 20px;
}

p {
  font-family: "Courier New", Courier, monospace;
  font-size: 13px;
  line-height: 20px;
}

.p-large {
  font-family: "Courier New", Courier, monospace;
  font-size: 31px;
  line-height: 40px;
}

a {
  text-decoration: none;
  color: #555555;
}
a:hover {
  color: #000000;
}

.link-logo {
  font-size: 55px;
  display: inline-block;
  width: 55px;
}

.text-link {
  font-family: "Courier New", Courier, monospace;
  color: #555555;
  fill: currentColor;
}
.text-link:hover {
  color: #000000;
}

button[type=submit],
.button {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
  display: inline-block;
  width: auto;
  padding: 10px 20px;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  background: #000000;
  color: #ffffff;
}
button[type=submit]:disabled,
.button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
button[type=submit]:not(:disabled):hover,
.button:not(:disabled):hover {
  background: #1a1a1a;
}
button[type=submit]:hover,
.button:hover {
  color: #ffffff;
}
button[type=submit].button-cta,
.button.button-cta {
  width: 100%;
  padding: 20px;
}
.text-white button[type=submit],
.text-white .button {
  background: #ffffff;
  color: #000000;
}
.text-white button[type=submit]:hover,
.text-white .button:hover {
  color: #000000;
  background: #e6e6e6;
}

.styled-select {
  position: relative;
  color: #555555;
}
.styled-select select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  cursor: pointer;
  background: transparent;
  border: none;
  border-radius: 0;
  width: auto;
  margin: 0;
  padding: 0;
  line-height: normal;
  -webkit-font-smoothing: inherit;
  -moz-osx-font-smoothing: inherit;
  text-align: left;
  font-family: "Courier New", Courier, monospace;
  font-size: 13px;
  line-height: 20px;
  color: currentColor;
  padding-right: 20px;
  width: 100%;
}
.styled-select .inline-icon {
  position: absolute;
  top: 0;
  right: 0;
  pointer-events: none;
  font-size: 0.65em;
}
.text-white .styled-select {
  color: #AAAAAA;
}
.text-white .styled-select:hover {
  color: #ffffff;
}

blockquote p {
  font-weight: 700;
}
blockquote cite {
  display: block;
  margin-top: 20px;
}

.visually-hidden {
  /* https://snook.ca/archives/html_and_css/hiding-content-for-accessibility */
  position: absolute !important;
  height: 1px;
  width: 1px;
  overflow: hidden;
  clip: rect(1px 1px 1px 1px);
  /* IE6, IE7 */
  clip: rect(1px, 1px, 1px, 1px);
}

.wrapper {
  padding-left: 40px;
  padding-right: 40px;
}

.grid {
  display: grid;
  grid-column-gap: 40px;
  grid-row-gap: 40px;
}
.grid > * {
  min-width: 0;
  min-height: 0;
}
.grid.collapse {
  grid-column-gap: 0;
  grid-row-gap: 0;
}

.two-columns {
  grid-template-columns: 1fr 1fr;
}

.valign-center {
  display: flex;
  flex-direction: column;
}
.valign-center > *:first-child {
  margin-top: auto;
}
.valign-center > *:last-child {
  margin-bottom: auto;
}

.ta-center {
  text-align: center;
}

.text-white {
  color: #ffffff;
}
.text-white h1, .text-white .h1, .text-white h2, .text-white .h2, .text-white h3, .text-white .h3, .text-white h4, .text-white .h4 {
  color: #ffffff;
}
.text-white p,
.text-white .accent-color {
  color: #CCCCCC;
}
.text-white a {
  color: #ffffff;
}
.text-white a:hover {
  color: #ffffff;
}

#mini-cart {
  display: none;
}

html.mini-cart-open #mini-cart {
  display: block;
}
html.mini-cart-open main {
  opacity: 0.3;
}